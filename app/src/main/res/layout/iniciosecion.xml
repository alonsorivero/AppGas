<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/fondoapp2"
    android:layout_height="match_parent">
    <?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:gravity="center">

        <!-- Logo de la aplicación -->
        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logo"
            android:textSize="24sp"
            android:textColor="#000"
            android:layout_alignParentTop="true"/>

        <!-- Título de la aplicación -->
        <TextView
            android:id="@+id/tv_nombre_aplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nombre de la aplicación"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_below="@id/tv_logo"
            android:layout_marginTop="16dp"/>

        <!-- Campo de usuario -->
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username"
            android:layout_below="@id/tv_nombre_aplicacion"
            android:layout_marginTop="32dp"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"
            android:drawableStart="@android:drawable/ic_menu_edit"/>

        <!-- Campo de contraseña -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:layout_below="@id/et_username"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"
            android:drawableStart="@android:drawable/ic_lock"/>

        <!-- Botón de inicio de sesión -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_below="@id/et_password"
            android:layout_marginTop="24dp"
            android:textColor="#FFF"/>

        <!-- Enlace para olvidar la contraseña -->
        <TextView
            android:id="@+id/tv_olvide_contrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="olvide mi contraseña"
            android:textColor="#2196F3"
            android:layout_below="@id/btn_login"
            android:layout_marginTop="8dp"/>

        <!-- Texto para iniciar sesión con redes sociales -->
        <TextView
            android:id="@+id/tv_iniciar_con_redes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o inicia sesión con"
            android:layout_below="@id/tv_olvide_contrasena"
            android:layout_marginTop="24dp"/>

        <!-- Botones de redes sociales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_iniciar_con_redes"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_facebook"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Facebook"/>

            <Button
                android:id="@+id/btn_google"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Google"/>

            <Button
                android:id="@+id/btn_twitter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="icloud"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>